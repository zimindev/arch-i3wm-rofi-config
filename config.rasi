/**
 * Dark Gray Rofi Theme for Drun Menu
 * Customized from original by Aditya Shakya (adi1090x)
 **/

/*****----- Configuration -----*****/
configuration {
    modi:                        "drun"; /* –¢—ñ–ª—å–∫–∏ drun –º–µ–Ω—é */
    show-icons:                  true;
    display-drun:                "üßë‚Äçüíª"; /* –ë—ñ–ª—å—à –æ–ø–∏—Å–æ–≤–∏–π —Ç–µ–∫—Å—Ç –¥–ª—è drun */
    drun-display-format:         "{name}"; /* –õ–∏—à–µ –Ω–∞–∑–≤–∞ –∑–∞—Å—Ç–æ—Å—É–Ω–∫—É –¥–ª—è –∫–æ–º–ø–∞–∫—Ç–Ω–æ—Å—Ç—ñ */
}

/*****----- Color Scheme -----*****/
* {
    /* Base colors */
    background:                  #212121; /* –î—É–∂–µ —Ç–µ–º–Ω–æ-—Å—ñ—Ä–∏–π, –º–∞–π–∂–µ —á–æ—Ä–Ω–∏–π */
    background-alt:              #2c2c2c; /* –¢–µ–º–Ω–æ-—Å—ñ—Ä–∏–π, —Ç—Ä–æ—Ö–∏ —Å–≤—ñ—Ç–ª—ñ—à–∏–π –∑–∞ background */
    foreground:                  #e6e6e6; /* –°–≤—ñ—Ç–ª–æ-—Å—ñ—Ä–∏–π –¥–ª—è —Ç–µ–∫—Å—Ç—É */
    selected:                    #424242; /* –°–µ—Ä–µ–¥–Ω—å–æ-—Å—ñ—Ä–∏–π –¥–ª—è –≤–∏–±—Ä–∞–Ω–∏—Ö –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ */
    active:                      #505050; /* –¢—Ä–æ—Ö–∏ —Å–≤—ñ—Ç–ª—ñ—à–∏–π —Å—ñ—Ä–∏–π –¥–ª—è –∞–∫—Ç–∏–≤–Ω–∏—Ö –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ */
    urgent:                      #b06060; /* –ü—Ä–∏–≥–ª—É—à–µ–Ω–∏–π —á–µ—Ä–≤–æ–Ω–∏–π –¥–ª—è —Ç–µ—Ä–º—ñ–Ω–æ–≤–∏—Ö, —è–∫—â–æ –≤–æ–Ω–∏ –∑'—è–≤–ª—è—Ç—å—Å—è */
    
    /* Derived colors */
    border-colour:               var(selected);
    handle-colour:               var(selected);
    background-colour:           var(background);
    foreground-colour:           var(foreground);
    alternate-background:        var(background-alt);
    normal-background:           var(background);
    normal-foreground:           var(foreground);
    urgent-background:           var(urgent);
    urgent-foreground:           var(foreground);
    active-background:           var(active);
    active-foreground:           var(foreground);
    selected-normal-background:  var(selected);
    selected-normal-foreground:  var(foreground);
    selected-urgent-background:  var(urgent);
    selected-urgent-foreground:  var(foreground);
    selected-active-background:  var(active);
    selected-active-foreground:  var(foreground);
    alternate-normal-background: var(background);
    alternate-normal-foreground: var(foreground);
    alternate-urgent-background: var(urgent);
    alternate-urgent-foreground: var(foreground);
    alternate-active-background: var(active);
    alternate-active-foreground: var(foreground);
}

/*****----- Window Settings -----*****/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       400px;
    x-offset:                    0px;
    y-offset:                    0px;
    margin:                      0px;
    padding:                     0px;
    border:                      2px solid;
    border-radius:               8px;
    border-color:                @border-colour;
    cursor:                      "default";
    background-color:            @background-colour;
}

/*****----- Main Box -----*****/
mainbox {
    spacing:                     10px;
    padding:                     10px;
    background-color:            transparent;
    children:                    [ "inputbar", "listview" ]; /* –ü—Ä–∏–±—Ä–∞–Ω–æ message —Ç–∞ mode-switcher */
}

/*****----- Input Bar -----*****/
inputbar {
    spacing:                     10px;
    padding:                     10px;
    border:                      0px 0px 1px 0px;
    border-color:                @border-colour;
    background-color:            @alternate-background;
    text-color:                  @foreground-colour;
    children:                    [ "prompt", "entry" ];
}

/*****----- Prompt -----*****/
prompt {
    enabled:                     true;
    padding:                     0px;
    background-color:            inherit;
    text-color:                  inherit;
}

/*****----- Entry -----*****/
entry {
    background-color:            inherit;
    text-color:                  inherit;
    placeholder:                 "search..."; /* –ü—ñ–¥–∫–∞–∑–∫–∞ –¥–ª—è –ø–æ–ª—è –≤–≤–æ–¥—É */
    placeholder-color:           #999999; /* –°—ñ—Ä–∏–π –∫–æ–ª—ñ—Ä –¥–ª—è –ø—ñ–¥–∫–∞–∑–∫–∏ */
}

/*****----- List View -----*****/
listview {
    columns:                     1; /* –û–¥–Ω–∞ –∫–æ–ª–æ–Ω–∫–∞ –¥–ª—è –∫—Ä–∞—â–æ–≥–æ –≤—ñ–¥–æ–±—Ä–∞–∂–µ–Ω–Ω—è –Ω–∞–∑–≤ –∑–∞—Å—Ç–æ—Å—É–Ω–∫—ñ–≤ */
    lines:                       10; /* –ë—ñ–ª—å—à–µ —Ä—è–¥–∫—ñ–≤ –¥–ª—è —Å–ø–∏—Å–∫—É –∑–∞—Å—Ç–æ—Å—É–Ω–∫—ñ–≤ */
    spacing:                     0px;
    padding:                     0px;
    background-color:            transparent;
    text-color:                  @foreground-colour;
    cursor:                      "default";
    cycle:                       true; /* –î–æ–∑–≤–æ–ª—è—î –ø—Ä–æ–∫—Ä—É—á—É–≤–∞—Ç–∏ —Å–ø–∏—Å–æ–∫ –ø–æ –∫–æ–ª—É */
    dynamic:                     true; /* –î–æ–∑–≤–æ–ª—è—î –¥–∏–Ω–∞–º—ñ—á–Ω–µ –æ–Ω–æ–≤–ª–µ–Ω–Ω—è —Å–ø–∏—Å–∫—É */
}

/*****----- Elements -----*****/
element {
    spacing:                     10px;
    padding:                     10px;
    border-radius:               4px;
    background-color:            transparent;
    text-color:                  @foreground-colour;
    cursor:                      pointer;
}

element-icon {
    size:                        28px;
    vertical-align:              0.5;
}

element selected.normal {
    background-color:            var(selected-normal-background);
    text-color:                  var(selected-normal-foreground);
}